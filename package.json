{
  "name": "dkutils",
  "version": "2.0.2",
  "description": "A web-based platform offering a collection of utility tools, built with MERN stack (MongoDB, Express.js, React.js, Node.js) and TailwindCSS",
  "private": true,
  "packageManager": "pnpm@10.28.2",
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "^19.0.0",
        "react-dom": "^19.0.0"
      }
    }
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "format": "prettier --write .",
    "prepare": "husky",
    "start": "turbo run start"
  },
  "keywords": [
    "utility",
    "tools",
    "web-app",
    "mern-stack",
    "react",
    "node.js",
    "express.js",
    "mongodb",
    "tailwind-css",
    "image-converter",
    "pdf-tools",
    "text-tools",
    "url-shortener",
    "qr-code",
    "password-generator",
    "hash-generator",
    "authentication",
    "user-management",
    "responsive-design",
    "open-source"
  ],
  "author": "gaureshpai",
  "license": "ISC",
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.3.3",
    "turbo": "^2.8.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": "prettier --write"
  }
}
